<!DOCTYPE html>
<html>
  <head>
    <title>InnovationPrep</title>
    <%= csrf_meta_tags %>
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%# <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"> %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', integrity: 'sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB', crossorigin: 'anonymous"' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'https://unpkg.com/axios/dist/axios.min.js' %>
    <%= javascript_include_tag 'main' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
 

    <% if signed_in? %>


    <nav class="text-center navbar navbar-dark fixed-top bg-primary flex-md-nowrap p-0 shadow">
      <%= link_to "Innovation Prep", root_path, class: "navbar-brand col-sm-3 col-md-2 mr-0" %>
      <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
      <ul class="navbar-nav px-3">
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="text-center col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Students", students_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Teachers", teachers_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Courses", courses_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Cohorts", cohorts_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign out', sign_out_path, method: :delete, class: 'nav-link' %>
              </li>    
            </ul>

        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 text-center">
          <div class="border-bottom">
            <h1 class="h2">Signed in as: <%= current_user.email %></h1>
          </div>

          <div id="flash">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
            <% end %>
          </div>

          <%= yield %>

        </main>
      </div>
    </div>


    <% else %>


    <nav class="navbar navbar-dark fixed-top bg-primary flex-md-nowrap p-0 shadow">
      <%= link_to "Innovation Prep", root_path, class: "navbar-brand col-sm-3 col-md-2 mr-0" %>
      <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to 'Sign in', sign_in_path, class: "nav-link" %>
              </li>
            </ul>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 text-center">
          <div class="border-bottom">
            <h1 class="h2">Innovation Prep</h1>
          </div>

          <div id="flash">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
            <% end %>
          </div>

          <%= yield %>

        </main>
      </div>
    </div>

    <% end %>

    




    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>
