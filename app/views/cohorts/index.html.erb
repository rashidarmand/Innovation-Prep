<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cohorts.each do |cohort| %>
        <tr>
          <td><%= cohort.name %></td>
          <td><%= cohort.start_date.localtime.strftime("%-m/%-d/%y") %></td>
          <td><%= cohort.end_date.localtime.strftime("%-m/%-d/%y") %></td>
          <td><%= link_to 'Show', cohort %></td>
          <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
          <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Cohort', new_cohort_path, class: "btn btn-primary text-white" %>
