<p id="notice"><%= notice %></p>

<div class="justify-content-center" style="display: flex;">
  <div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>Cohort Name:</strong>
        <%= @cohort.name %>
      </li>
      <li class="list-group-item">
        <strong>Start date:</strong>
        <%= @cohort.start_date.localtime.strftime("%-m/%-d/%y") %>
      </li>
      <li class="list-group-item">
        <strong>End date:</strong>
        <%= @cohort.end_date.localtime.strftime("%-m/%-d/%y") %>
      </li>
    </ul>
  </div>
</div>

<br>

<% if !@cohort.courses.empty? %>
<p>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Course</th>
        <th>Hours</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cohort.courses.each do |course|%>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.hours %></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
</p>
<% else %>
<p>
  <h2><strong>No Courses Yet ðŸ˜•</strong></h2>
</p>
<% end %>

<br>

<%= link_to 'Edit', edit_cohort_path(@cohort), class: "btn btn-primary text-white" %> |
<%= link_to 'Back', cohorts_path, class: "btn btn-primary text-white" %>
