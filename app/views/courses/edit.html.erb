<h1>Editing Course</h1>

<%= render 'form', course: @course %>

<br>

<%= form_for @course_student, method: :create do |f| %>
  <div>
  <%= f.collection_select(:student_id, @students, :id, :full_name)  %>
  </div>
  <br>
  <%= f.hidden_field(:course_id, value: "#{@course.id}") %>
  <%= hidden_field(:id, value: "#{@course.id}") %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div>
  <%= f.submit "Add Student", class: "btn btn-primary"  %>
  </div>
<% end %>

<br>

<%= form_for @course_teacher, method: :create do |f| %>
