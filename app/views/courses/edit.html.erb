  <%= hidden_field(:id, value: "#{@course.id}") %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div>
  <%= f.submit "Add Teacher", class: "btn btn-primary"  %>
  </div>
<% end %>

<br>

<%= form_for @cohort_course, method: :create do |f| %>
  <div>
  <%= f.collection_select(:cohort_id, @cohorts, :id, :name)  %>
  </div>
  <br>
  <%= f.hidden_field(:course_id, value: "#{@course.id}") %>
  <%= hidden_field(:id, value: "#{@course.id}") %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div>
  <%= f.submit "Add Cohort", class: "btn btn-primary"  %>
  </div>
<% end %>

<br>

<%= link_to 'Show', @course, class: "btn btn-primary text-white" %> |
<%= link_to 'Back', courses_path, class: "btn btn-primary text-white" %>
